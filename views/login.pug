html
	include head.pug
	link(rel="stylesheet", href="/stylesheets/form.css")
	body
		form(action="/login", method="post")
			h1 Log in
			div
				label Username:
				input(type="text", name="username")
			div
				label Password:
				input(type="password", name="password")
			div
				input.btn(type="submit", value="Log in")

		if error_message != ""
			div.error-message
				p=error_message
		else if success_message != ""
			div.success-message
				p=success_message

