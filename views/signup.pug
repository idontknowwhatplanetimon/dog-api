html
	include head.pug
	link(rel="stylesheet", href="/stylesheets/form.css")
	body
		form(action="/signup", method="post")
			h1 Registration Form
			div
				label Username:
				input(type="text", name="username")
			div
				label Password:
				input(type="password", name="password")
			div
				input.btn(type="submit", value="Sign Up")

		if error_message != ""
			div.error-message
				p=error_message

